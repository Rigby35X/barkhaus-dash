{
  "devCommand": "npm run dev",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)",       "dest": "/api/$1.ts" },
    { "src": "/templates",      "dest": "/index.html" },
    { "src": "/templates/(.*)", "dest": "/index.html" },
    { "src": "/app/(.*)",       "dest": "/index.html" },
    { "src": "/(.*)",           "dest": "/$1" }
  ]
}
